generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id            Int      @id @default(autoincrement())
  requestId     String   @unique
  url           String
  method        String
  status        Int
  duration      Int
  responseBody  Json
  requestBody   Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  startTime     Float
  endTime       Float
  numberOfBytes Float

  // Indexes for better query performance
  @@index([url])
  @@index([method])
  @@index([startTime])
  @@index([endTime])
  @@index([status])
  // Composite indexes for common query patterns
  @@index([url, method])
  @@index([startTime, endTime])
  @@index([method, status])
  // Index for time-based queries with method
  @@index([method, startTime, endTime])
}
